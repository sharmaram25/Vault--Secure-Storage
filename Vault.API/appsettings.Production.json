{
  "Jwt": {
    "SecretKey": "ProductionJwtSecretKeyWillBeSetViaEnvironmentVariable",
    "Issuer": "VaultAPI",
    "Audience": "VaultWeb",
    "ExpirationMinutes": 60
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/vault.db"
  },
  "AllowedOrigins": [
    "https://vault-secure-storage.onrender.com",
    "https://vault-api.onrender.com"
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
